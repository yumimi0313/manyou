<h1>管理画面　ユーザ一覧</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>タスクの数</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.admin? ? 'あり': 'なし' %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to '詳細', admin_user_path(user), class: "btn btn-info" %></td>
      <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-secondary" %></td>
      <td><%= link_to '削除', admin_user_path(user), method: :delete, class: "btn btn-dark" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Create new User', new_admin_user_path, class: "btn btn-primary" %>
