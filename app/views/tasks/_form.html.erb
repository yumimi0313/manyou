<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <h2><%= pluralize(task.errors.count, "error") %> prohibited this task form being saved</h2>
    <ul>
      <% task.errors.each do |task| %>
      <li><%= task.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <p><%= f.label :title %><br/ >
  <%= f.text_field :title %></p>

  <p><%= f.label :content %><br/ >
  <%= f.text_area :content %></p>

  <p><%= f.label :due_date %><br/ >
  <%= f.date_field :due_date %></p>

  <p><%= f.label :status %><br/ >
  <%= f.select :status, Task.statuses.keys %></p>
  
  <p><%= f.label :priority %><br/ >
  <%= f.select :priority, Task.priorities.keys %></p>

  <p><%= f.collection_check_boxes(:label_ids, Label.all, :id, :name) %></p>
  
  <%= f.submit '登録する' %>

<% end %>

<% link_to 'Back', tasks_path %>