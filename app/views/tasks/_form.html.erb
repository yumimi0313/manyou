<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <h2><%= pluralize(task.errors.count, "error") %> prohibited this task form being saved</h2>
    <ul>
      <% task.errors.each do |task| %>
      <li><%= task.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <p><%= f.label :Task %><br/ >
  <%= f.text_field :title %></p>

  <p><%= f.label :内容 %><br/ >
  <%= f.text_area :content %></p>

  <%= f.submit 'Create your Task' %>

<% end %>

<% link_to 'Back', tasks_path %>